
/// <summary>
/// 游戏模块接口
/// </summary>
public interface IGameModule
{
    /// <summary>
    /// 开始模块之前
    /// </summary>
    void BeforeStartModule();
    /// <summary>
    /// 开始模块
    /// </summary>
    void StartModule();
    /// <summary>
    /// 开始模块之后
    /// </summary>
    void AfterStartModule();

    /// <summary>
    /// 停止模块之前
    /// </summary>
    void BeforeStopModule();
    /// <summary>
    /// 停止模块
    /// </summary>
    void StopModule();
    /// <summary>
    /// 停止模块之后
    /// </summary>
    void AfterStopModule();

    /// <summary>
    /// 更新模块之前
    /// </summary>
    void BeforeUpdateModule();
    /// <summary>
    /// 更新模块
    /// </summary>
    void UpdateModule();
    /// <summary>
    /// 更新模块之后
    /// </summary>
    void AfterUpdateModule();

    /// <summary>
    /// 释放场景
    /// </summary>
    void OnFreeScene();
}
