
namespace Res
{
    public static class AssetPath
    {
        public const string PanelPath = "UI/Panel/";
        public const string PrefabPath = "UI/Prefab/";
        public const string SpritePath = "UI/Sprite/";
        public const string AudioPath = "UI/Sprite/";
        public const string UICharPath = "UI/Character/";

        public static string GetAssetPath(AssetType type)
        {
            switch(type)
            {
                case AssetType.Panel:
                    return PanelPath;
                case AssetType.Prefab:
                    return PrefabPath;
                case AssetType.Audio:
                    return AudioPath;
                case AssetType.Sprite:
                    return SpritePath;
                case AssetType.UIChar:
                    return UICharPath;
                default:
                    return "";
            }
        }

    }
}
