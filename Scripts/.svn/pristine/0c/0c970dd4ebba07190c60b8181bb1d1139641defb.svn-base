        private void ClickBackBtn()
        {
            if(m_charInfo.IsInChangeNameState())
            {
                m_charInfo.CancelChangeName();
                return;
            }
            UIPanelManager.Instance.Hide<CharPanel>(false,true);
        }

        private void ClickSwitchBtn()
        {
            if(m_currentIndex != -1)
                m_tog.ClickTog(2);
        }
    }
}
