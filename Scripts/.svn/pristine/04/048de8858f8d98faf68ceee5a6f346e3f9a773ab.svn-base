using ProtoBuf;
using System.Collections.Generic;


/// <summary>
/// 角色存档数据
/// </summary>
[ProtoContract(ImplicitFields = ImplicitFields.AllFields)]
public class CharData
{
    public bool isCommander;
    public string charName;
    public bool isRename;

    public float finalUpgradeDefSum;
    public float finalUpgradeOffSum;
    /// <summary>
    /// 强化ID
    /// </summary>
    public List<int> powerUpIDs = new List<int>();
    /// <summary>
    /// 角色生命
    /// </summary>
    public float charHP;
    /// <summary>
    /// 性格添加被动技能
    /// </summary>
    public int personalityAddPassiveSkill;
    /// <summary>
    /// 性格类型
    /// </summary>
    public int personalityType;
    /// <summary>
    /// 性格
    /// </summary>
    public int attitudeID;
    /// <summary>
    /// 最大升级
    /// </summary>
    public float maxUpgrade;
    /// <summary>
    /// 最小升级
    /// </summary>
    public float minUpgrade;
    /// <summary>
    /// 角色位置
    /// </summary>
    public int charPos;
    /// <summary>
    /// 角色状态类型
    /// </summary>
    public int charStateType;
    /// <summary>
    /// 角色模板ID
    /// </summary>
    public int templateID;
    /// <summary>
    /// 角色ID
    /// </summary>
    public int charID;
    /// <summary>
    /// 角色经验
    /// </summary>
    public float charEXP;
    /// <summary>
    /// 角色等级
    /// </summary>
    public int charLevel;
    /// <summary>
    /// 角色当前品质
    /// </summary>
    public float charQuality;
    /// <summary>
    /// 角色类型
    /// </summary>
    public CombatCharType charType;
    /// <summary>
    /// 角色随机强化_生命
    /// </summary>
    public float upgradeDef;
    /// <summary>
    /// 角色随机强化_伤害
    /// </summary>
    public float upgradeOff;
    /// <summary>
    /// 角色攻击
    /// </summary>
    public float charAttack;
    /// <summary>
    /// 角色随机属性列表
    /// </summary>
    public List<int> rndATTs = new List<int>();
    /// <summary>
    /// 装备实例ID列表
    /// </summary>
    public List<int> equipID = new List<int>();
    public List<BuffInfo> buffs = new List<BuffInfo>();
    /// <summary>
    /// 手动技能
    /// </summary>
    public List<int> manualSkills = new List<int>();
    /// <summary>
    /// 战斗技能
    /// </summary>
    public List<int> combatSkills = new List<int>();
    /// <summary>
    /// 被动技能
    /// </summary>
    public List<int> passiveSkills = new List<int>();
    /// <summary>
    /// 战术技能
    /// </summary>
    public List<int> tacticalSkills = new List<int>();
    /// <summary>
    /// 通用技能
    /// </summary>
    public List<int> commonSkills = new List<int>();

}

