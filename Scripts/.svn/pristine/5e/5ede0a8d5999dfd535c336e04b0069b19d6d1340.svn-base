using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UnityEngine;

public static class AudioUitil
{
    public static string GetSoundNameByType(SoundClicpType soundClicpType)
    {
        string name = "";
        switch (soundClicpType)
        {
            case SoundClicpType.Test:
                return "sound";         
        }
        return name;
    }

    public static string GetMusicNameByType(MusicClipType musicClipType)
    {
        string name = "";
        switch(musicClipType)
        {
            case MusicClipType.None:
                break;
            case MusicClipType.NormalBgm:
                return "Bgm";
            case MusicClipType.BattleBgm:
                break;
        }
        return name;
    }

}

